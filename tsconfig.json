{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "inlineSourceMap": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es2017",
            "esnext",
            "esnext.asynciterable"
        ],
        "module": "commonjs",
        "newLine": "lf",
        "outDir": "dist",
        "removeComments": false,
        "target": "esnext"
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ]
}
